{
    "env": {
        "es2021": true
    },
    "globals": {
        "__DEV__": "readonly"
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "typescript-eslint",
        "react-hooks",
        "prettier"
    ],
    "rules": {
        "prettier/prettier":"error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps":"warn",
        "react/jsx-filename-extensions":[1, {"extensions": [".tsx"]}],
        "import/prefer-default-export":"off",
        "import/extensions":[
            "error",
            "ignorePackages",
            {
                "ts":"never",
                "tsx":"never"
            }
        ]
    },
    "settings": {
        "import/resolver":{
            "typescript":{}
        }
    }
}
